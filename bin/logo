#!/usr/bin/env bash

plugin_name="
   ████████╗███╗   ███╗██╗   ██╗██╗   ██╗
   ╚══██╔══╝████╗ ████║██║   ██║ ██╗ ██╔╝
      ██║   ██╔████╔██║██║   ██║  ████╔╝ 
      ██║   ██║╚██╔╝██║██║   ██║ ██╔═██╗ 
      ██║   ██║ ╚═╝ ██║╚██████╔╝██╔╝  ██╗
      ╚═╝   ╚═╝     ╚═╝ ╚═════╝ ╚═╝   ╚═╝
    
    ██████╗ ██████╗ ██╗███╗   ███╗ ██████╗ ██╗██████╗ ███████╗
   ██╔════╝ ██╔══██╗██║████╗ ████║██╔═══██╗██║██╔══██╗██╔════╝
   ██║  ███╗██████╔╝██║██╔████╔██║██║   ██║██║██████╔╝█████╗  
   ██║   ██║██╔══██╗██║██║╚██╔╝██║██║   ██║██║██╔══██╗██╔══╝  
   ╚██████╔╝██║  ██║██║██║ ╚═╝ ██║╚██████╔╝██║██║  ██║███████╗
    ╚═════╝ ╚═╝  ╚═╝╚═╝╚═╝     ╚═╝ ╚═════╝ ╚═╝╚═╝  ╚═╝╚══════╝" 

subheader="
   ┌─────────────────────────────────────────────────────────┐
   │          ⚡ Summoning Shpellbook Terminal ⚡            │
   └─────────────────────────────────────────────────────────┘
"

hex="#c6b7ee"

r=$((16#${hex:1:2}))
g=$((16#${hex:3:2}))
b=$((16#${hex:5:2}))

# Print with ANSI 24-bit escape code
# \033[38;2;<r>;<g>;<b>m = set foreground color
# \033[0m = reset
tput civis
printf "\033[38;2;%d;%d;%dm%s\033[0m\n" "$r" "$g" "$b" "$plugin_name $subheader"

# Wait for user input
read -rp $''
